<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shrobon.hikerswatch.MainActivity"
    android:padding="0dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/background"
        android:id="@+id/imageView"
        android:scaleType="fitXY" />

    <TextView
        android:text="Hiker's Watch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:id="@+id/textView"
        android:textColorLink="@color/colorPrimaryDark"
        android:textColorHighlight="@color/colorAccent"
        android:textSize="50sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="27dp"
        android:id="@+id/latTextView"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/lonTextView"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/latTextView"
        android:layout_alignLeft="@+id/latTextView"
        android:layout_alignStart="@+id/latTextView" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/accTextView"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/lonTextView"
        android:layout_alignLeft="@+id/lonTextView"
        android:layout_alignStart="@+id/lonTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/addressTextView"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/altTextView"
        android:layout_alignLeft="@+id/accTextView"
        android:layout_alignStart="@+id/accTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/altTextView"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/accTextView"
        android:layout_alignLeft="@+id/addressTextView"
        android:layout_alignStart="@+id/addressTextView" />
</RelativeLayout>
